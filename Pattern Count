#include <iostream>
#include<string.h>

using namespace std;

int patternCount(char* s){
    int count=0, k;
    int len=strlen(s);
    for(int i=0;i<len-1;i++)
    {
        k=0;
        if(s[i]=='1')
        {
            if(s[i+1]=='0'){
              while(s[++i]=='0')k=1;
              if(s[i]=='1' && k==1)
              { 
                  count++; 
                  i--;
              }
            }
        }
    }
    return count; 
}

int main() {
    int q;
    cin >> q;
    for(int a0 = 0; a0 < q; a0++){
        char s[2010];
        cin >> s;
        int result = patternCount(s);
        cout << result << endl;
    }
    return 0;
}
